<!-- admin-home.hbs -->

<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Home</title>
    <!-- Bootstrap CSS link -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Additional styles -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            margin-top: 20px;
        }

        .btn-container {
            margin-top: 20px;
        }

        .navbar {
            background-color: #004080; /* Adjusted to a darker blue */
            padding: 1rem 0;
        }

        .navbar-brand {
            color: #fff;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-nav .nav-link:hover {
            color: #f0f0f0;
        }

        h2 {
            color: #004080; /* Matching the navbar color */
        }

        .btn-primary,
        .btn-success,
        .btn-info {
            color: #fff;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">WHITEBOARD</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2>Welcome to the Admin Dashboard</h2>

        <div class="btn-container">
            <div class="row">
                <div class="col-md-6">
                    <a href="/register/student" class="btn btn-primary btn-lg btn-block">Register a New Student</a>
                </div>
                <div class="col-md-6">
                    <a href="/register/lecturer" class="btn btn-success btn-lg btn-block">Register a New Lecturer</a>
                </div>
                <div class="col-md-12 mt-3">
                    <a href="/register/course" class="btn btn-info btn-lg btn-block">Add a New Course</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js scripts (required for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
